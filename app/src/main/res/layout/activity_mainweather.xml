        app:layout_constraintBottom_toBottomOf="@+id/rainIng"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toLeftOf="@+id/summaryText"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintVertical_bias="0.548" />

    <com.thbs.skycons.library.CloudRainView
        android:visibility="gone"
        android:layout_width="264dp"
        android:layout_height="183dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
        android:id="@+id/cloudRainView"

        app:layout_constraintTop_toTopOf="@+id/temperatureText"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rainIng"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toLeftOf="@+id/summaryText"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintVertical_bias="0.548" />

    <com.thbs.skycons.library.CloudSnowView
        android:visibility="gone"
        android:layout_width="264dp"
        android:layout_height="183dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        app:bgColor = "#ffffff"
