<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/colors"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/summaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:textSize="20dp"
        android:layout_marginTop="0dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/temperatureText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/temperatureText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/temperatureText"
        app:layout_constraintHorizontal_bias="0.483" />

    <TextView
        android:id="@+id/rainIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is it gonna rain?"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/summaryText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/summaryText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/summaryText" />

    <TextView
        android:id="@+id/temperatureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50.00 F"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.449" />

    <TextClock
        android:visibility="gone"
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/sunView"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/moonView" />

    <com.thbs.skycons.library.MoonView
        android:layout_width="264dp"
        android:layout_height="183dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#FFFFFF"
        android:id="@+id/moonView"

        app:layout_constraintTop_toTopOf="@+id/temperatureText"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rainIng"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toLeftOf="@+id/summaryText"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintVertical_bias="0.548" />

    <com.thbs.skycons.library.CloudFogView
        android:visibility="gone"
        android:layout_width="264dp"
        android:layout_height="183dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:isStatic = "true"
        app:strokeColor = "#000000"
        android:id="@+id/cloudFogView"

        app:layout_constraintTop_toTopOf="@+id/temperatureText"
